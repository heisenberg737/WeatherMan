<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AirPollutionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:id="@+id/air_pollution_head">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lat_lon_entry"
        android:layout_below="@id/air_pollution_head">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Latitude"
            android:id="@+id/air_pollution_lat_entry"
            android:inputType="numberSigned|numberDecimal"
            android:textSize="17sp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Longitude"
            android:id="@+id/air_pollution_lon_entry"
            android:inputType="numberSigned|numberDecimal"
            android:textSize="17sp"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:hint="YYYY-MM-DD or YYYY-MM or YYYY"
        android:id="@+id/setDate"
        android:inputType="date"
        android:layout_below="@id/lat_lon_entry"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gas_choice"
        android:id="@+id/air_pollution_t"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="@android:color/background_dark"
            android:layout_weight="1"
            android:text="Time : "/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="@android:color/background_dark"
            android:layout_weight="1"
            android:id="@+id/air_pollution_time"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/air_pollution_t"
        android:id="@+id/air_pollution_loc_lat">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="@android:color/background_dark"
            android:layout_weight="1"
            android:text="Latitude : "/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="@android:color/background_dark"
            android:layout_weight="1"
            android:id="@+id/air_pollution_latitude"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/air_pollution_loc_lon"
        android:layout_below="@id/air_pollution_loc_lat">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="@android:color/background_dark"
            android:layout_weight="1"
            android:text="Longitude : "/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="@android:color/background_dark"
            android:layout_weight="1"
            android:id="@+id/air_pollution_longitude"/>
    </LinearLayout>
    
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Widget.Holo.ProgressBar"
        android:layout_below="@id/air_pollution_loc_lon"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:id="@+id/air_pollution_pb"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/gasName"
        android:layout_below="@id/air_pollution_loc_lon">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Gas : "
            android:layout_weight="1"
            android:textSize="23sp"
            android:textColor="@android:color/background_dark"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/background_dark"
            android:textSize="23sp"
            android:id="@+id/selectedGas"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/gasName"
        android:id="@+id/headings">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:padding="5dp"
            android:textColor="@android:color/background_dark"
            android:text="Precision"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:padding="5dp"
            android:textColor="@android:color/background_dark"
            android:text="Pressure"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@android:color/background_dark"
            android:text="Value"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/air_pollution_list"
        android:layout_below="@id/headings">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/setDate"
        android:id="@+id/gas_choice">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:textSize="17sp"
            android:text="CO"
            android:id="@+id/co_level"
            android:textColor="@android:color/white"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:textSize="17sp"
            android:text="O3"
            android:layout_marginStart="10dp"
            android:id="@+id/o3_level"
            android:textColor="@android:color/white"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:textSize="17sp"
            android:text="SO2"
            android:layout_marginStart="10dp"
            android:id="@+id/so2_level"
            android:textColor="@android:color/white"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:textSize="17sp"
            android:text="NO2"
            android:id="@+id/no2_level"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>



</RelativeLayout>